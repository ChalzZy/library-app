<html lang="en">
  <head>
    <%- include('../partials/head'); %>

    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body class="container">
    <header><%- include('../partials/header'); %></header>
    <h1 class="d-flex justify-content-center pt-2">Books List</h1>
    <!-- Repeating card -->
    <div class="container pt-5">
        <div class="row d-flex justify-content-center">
          <% bookList.forEach(book => { %>
          <div class="card" style="width: 18rem">
            <div class="card-body">
              <h5 class="card-title"><%= book.title %></h5>
              <h6 class="card-subtitle mb-2 text-muted">ISBN: <%= book.isbn13 %></h6>
              <p class="card-text text-break"></p>
              <h6 class="card-subtitle mb-2 text-muted">Author: <%= book.author %></h6>
              <button type="button" class="btn btn-primary btn-sm">More info</button>
              <button type="button" class="btn btn-primary btn-sm">Author</button>
            </div>
          </div>
          <%})%>
        </div>
      </div>
  </body>
  <%- include('../partials/footer'); %></footer>
</html>
